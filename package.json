{
  "name": "k8s-monitoring-system",
  "version": "0.1.0",
  "private": true,
  "description": "Kubernetes Monitoring, RAG, and Dashboard System - Root workspace",
  "scripts": {
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd backend && python -m uvicorn src.api.api_server:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "lint:backend": "cd backend && pylint src/",
    "lint:frontend": "cd frontend && npm run lint",
    "test:backend": "cd backend && pytest",
    "clean": "rm -rf node_modules frontend/node_modules backend/.venv",
    "setup": "npm run install:all"
  },
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/k8s-monitoring-rag"
  },
  "keywords": [
    "kubernetes",
    "monitoring",
    "rag",
    "dashboard",
    "ai",
    "machine-learning"
  ],
  "license": "MIT"
}
